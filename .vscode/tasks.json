{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Lint with Ruff",
            "type": "shell",
            "command": "ruff .",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$ruff"
        },
        {
            "label": "Format with Ruff",
            "type": "shell",
            "command": "ruff format .",
            "group": "build"
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "python -m pytest",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always"
            }
        },
        {
            "label": "Install Dependencies (uv)",
            "type": "shell",
            "command": "uv sync",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always"
            }
        }
    ]
}
